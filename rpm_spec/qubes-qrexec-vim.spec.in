Name:       qubes-core-qrexec-vim
Version:    @VERSION@
Release:    1%{dist}
Summary:    The Qubes qrexec vim files

Group:      Qubes
Vendor:     Invisible Things Lab
License:    Vim
URL:        https://www.qubes-os.org

BuildRequires:  vim-filesystem
BuildRequires:  vim-enhanced
BuildRequires:  make
BuildRequires:  lsb_release

Requires:   vim-filesystem

Source0:    qubes-core-qrexec-vim-%{version}.tar.gz

%description
A Qrexec companion for the policy breakers. Vim files for Qrexec.

%prep
%setup -qn qubes-core-qrexec-vim-%{version}

%build
make all-vim

%install
make install-vim DESTDIR=$RPM_BUILD_ROOT DATADIR=%{_datadir}

%clean
rm -rf $RPM_BUILD_ROOT
rm -f %{name}-%{version}

%files
%defattr(-,root,root,-)
